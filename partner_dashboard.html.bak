        </div>
    </nav>

    <!-- 合作夥伴標題區 -->
    <div class="partner-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1><i class="fas fa-handshake"></i> 合作夥伴控制台</h1>
                    <p class="mb-0">預約提交・業績查看・佣金管理・客戶追蹤</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <div class="partner-info">
                        <h5 class="mb-1">合作夥伴 ID: P001</h5>
                        <small>加入日期: 2024年1月</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 主要內容 -->
    <main class="main-content">
        <div class="container">
            <!-- 業績統計 -->
            <div class="row mb-4">
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card partner-card">
                        <div class="card-body text-center">
                            <i class="fas fa-users fa-2x text-primary mb-2"></i>
                            <h3 class="text-primary" id="totalReferrals">0</h3>
                            <p class="mb-0">總推薦客戶</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card partner-card">
                        <div class="card-body text-center">
                            <i class="fas fa-calendar-check fa-2x text-success mb-2"></i>
                            <h3 class="text-success" id="monthlyReferrals">0</h3>
                            <p class="mb-0">本月推薦</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card partner-card">
                        <div class="card-body text-center">
                            <i class="fas fa-percentage fa-2x text-warning mb-2"></i>
                            <h3 class="text-warning" id="conversionRate">0%</h3>
                            <p class="mb-0">轉換率</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card commission-card">
                        <div class="card-body text-center">
                            <i class="fas fa-dollar-sign fa-2x mb-2"></i>
                            <h3 id="totalCommission">$0</h3>
                            <p class="mb-0">總佣金收入</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 功能區域 -->
            <div class="row">
                <!-- 快速預約提交 -->
                <div class="col-lg-6 mb-4">
                    <div class="card partner-card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-plus-circle"></i>
                                快速預約提交
                            </h5>
                        </div>
                        <div class="card-body">
                            <form id="quickAppointmentForm">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">客戶姓名</label>
                                            <input type="text" class="form-control" id="customerName" required>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">聯絡電話</label>
                                            <input type="tel" class="form-control" id="customerPhone" required>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">預約日期</label>
                                            <input type="date" class="form-control" id="appointmentDate" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">預約時間</label>
                                            <select class="form-select" id="appointmentTime" required>
                                                <option value="">請選擇時間</option>
                                                <option value="12:00">12:00</option>
                                                <option value="12:15">12:15</option>
                                                <option value="12:30">12:30</option>
                                                <option value="12:45">12:45</option>
                                                <option value="13:00">13:00</option>
                                                <option value="13:15">13:15</option>
                                                <option value="13:30">13:30</option>
                                                <option value="13:45">13:45</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">療程項目</label>
                                            <select class="form-select" id="treatmentType" required>
                                                <option value="">請選擇療程</option>
                                                <option value="consultation">諮詢</option>
                                                <option value="botox">肉毒桿菌</option>
                                                <option value="filler">玻尿酸</option>
                                                <option value="laser">雷射治療</option>
                                                <option value="facial">臉部護理</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">備註</label>
                                            <textarea class="form-control" id="appointmentNotes" rows="2"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-paper-plane"></i> 提交預約
                                </button>
                                <button type="button" class="btn btn-outline-secondary" onclick="clearForm()">
                                    <i class="fas fa-eraser"></i> 清除
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- 佣金資訊 -->
                <div class="col-lg-6 mb-4">
                    <div class="card partner-card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-pie"></i>
                                佣金資訊
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <div class="commission-rate text-warning">15%</div>
                                <p class="text-muted">當前佣金比例</p>
                            </div>
                            
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="border-end">
                                        <h6 class="text-success">$12,500</h6>
                                        <small class="text-muted">本月佣金</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="border-end">
                                        <h6 class="text-info">$8,200</h6>
                                        <small class="text-muted">待結算</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <h6 class="text-warning">$45,800</h6>
                                    <small class="text-muted">累計收入</small>
                                </div>
                            </div>
                            
                            <div class="mt-3">
                                <div class="performance-chart">
                                    <canvas id="commissionChart"></canvas>
                                </div>
                            </div>
                            
                            <div class="mt-3 text-center">
                                <button class="btn btn-outline-primary btn-sm" onclick="requestPayout()">
                                    <i class="fas fa-money-bill-wave"></i> 申請提領
                                </button>
                                <button class="btn btn-outline-secondary btn-sm" onclick="viewCommissionHistory()">
                                    <i class="fas fa-history"></i> 歷史記錄
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 推薦客戶列表 -->
            <div class="row">
                <div class="col-lg-8 mb-4">
                    <div class="card partner-card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="fas fa-list"></i>
                                推薦客戶列表
                            </h5>
                            <div>
                                <select class="form-select form-select-sm" id="statusFilter">
