                                    <option value="pending">待確認</option>
                                    <option value="confirmed">已確認</option>
                                    <option value="completed">已完成</option>
                                </select>
                            </div>
                        </div>
                        <div class="card-body">
                            <div id="referralsList">
                                <div class="referral-item">
                                    <div class="row align-items-center">
                                        <div class="col-md-3">
                                            <strong>王小明</strong><br>
                                            <small class="text-muted">0912-345-678</small>
                                        </div>
                                        <div class="col-md-2">
                                            <span class="badge bg-warning">待確認</span>
                                        </div>
                                        <div class="col-md-2">
                                            肉毒桿菌
                                        </div>
                                        <div class="col-md-2">
                                            2024/09/25
                                        </div>
                                        <div class="col-md-2">
                                            $1,500
                                        </div>
                                        <div class="col-md-1">
                                            <button class="btn btn-sm btn-outline-primary" onclick="viewReferralDetail('R001')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="referral-item">
                                    <div class="row align-items-center">
                                        <div class="col-md-3">
                                            <strong>李美麗</strong><br>
                                            <small class="text-muted">0987-654-321</small>
                                        </div>
                                        <div class="col-md-2">
                                            <span class="badge bg-success">已完成</span>
                                        </div>
                                        <div class="col-md-2">
                                            玻尿酸
                                        </div>
                                        <div class="col-md-2">
                                            2024/09/20
                                        </div>
                                        <div class="col-md-2">
                                            $3,000
                                        </div>
                                        <div class="col-md-1">
                                            <button class="btn btn-sm btn-outline-primary" onclick="viewReferralDetail('R002')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="referral-item">
                                    <div class="row align-items-center">
                                        <div class="col-md-3">
                                            <strong>張先生</strong><br>
                                            <small class="text-muted">0955-123-456</small>
                                        </div>
                                        <div class="col-md-2">
                                            <span class="badge bg-primary">已確認</span>
                                        </div>
                                        <div class="col-md-2">
                                            雷射治療
                                        </div>
                                        <div class="col-md-2">
                                            2024/09/28
                                        </div>
                                        <div class="col-md-2">
                                            $2,500
                                        </div>
                                        <div class="col-md-1">
                                            <button class="btn btn-sm btn-outline-primary" onclick="viewReferralDetail('R003')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mt-3 text-center">
                                <button class="btn btn-outline-primary" onclick="loadMoreReferrals()">
                                    <i class="fas fa-plus"></i> 載入更多
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 快速操作 -->
                <div class="col-lg-4 mb-4">
                    <div class="card partner-card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-bolt"></i>
                                快速操作
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <button class="btn btn-primary" onclick="newReferral()">
                                    <i class="fas fa-user-plus"></i> 新增推薦
                                </button>
                                <button class="btn btn-outline-success" onclick="viewPerformance()">
                                    <i class="fas fa-chart-line"></i> 業績報表
                                </button>
                                <button class="btn btn-outline-warning" onclick="downloadMaterials()">
                                    <i class="fas fa-download"></i> 宣傳素材
                                </button>
                                <button class="btn btn-outline-info" onclick="contactSupport()">
                                    <i class="fas fa-headset"></i> 聯絡客服
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- 推薦連結 -->
                    <div class="card partner-card mt-3">
                        <div class="card-header">
                            <h6 class="mb-0">
                                <i class="fas fa-link"></i>
                                專屬推薦連結
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="input-group">
                                <input type="text" class="form-control" value="https://clinic.com/ref/P001" readonly>
                                <button class="btn btn-outline-secondary" onclick="copyReferralLink()">
                                    <i class="fas fa-copy"></i>
                                </button>
                            </div>
                            <small class="text-muted">分享此連結給客戶即可自動追蹤推薦</small>
                        </div>
                    </div>

                    <!-- 本月目標 -->
                    <div class="card partner-card mt-3">
                        <div class="card-header">
                            <h6 class="mb-0">
                                <i class="fas fa-target"></i>
                                本月目標
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="text-center">
                                <div class="progress-custom mb-2">
                                    <div class="progress-bar-custom" style="width: 60%"></div>
                                </div>
                                <div class="h5">6 / 10</div>
                                <small class="text-muted">推薦客戶數</small>
                            </div>
                            <div class="mt-3 text-center">
                                <small class="text-success">
                                    <i class="fas fa-trophy"></i>
                                    達成目標可獲得額外獎金
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 返回首頁按鈕 -->
            <div class="text-center mt-4">
                <a href="index.html" class="nav-btn">
                    <i class="fas fa-home"></i> 返回首頁
                </a>
            </div>
        </div>
    </main>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- 自定義 JavaScript -->
    <script src="js/main.js"></script>
    <script src="js/social-integration.js"></script>
    
    <script>
        // 合作夥伴儀表板初始化
        document.addEventListener('DOMContentLoaded', function() {
            initializePartnerDashboard();
            createCommissionChart();
            loadPartnerStatistics();
            setMinDate();
        });

        // 初始化合作夥伴儀表板
        function initializePartnerDashboard() {
            // 檢查合作夥伴權限
            const currentUser = MedicalPlatform.getCurrentUser();
            if (!currentUser || currentUser.role.id !== 'partner') {
                MedicalPlatform.showAlert('您沒有權限存取此頁面', 'danger');
                setTimeout(() => {
                    window.location.href = 'index.html';
                }, 2000);
                return;
            }
            
            console.log('合作夥伴儀表板初始化完成');
        }

        // 設定最小日期為今天
        function setMinDate() {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('appointmentDate').min = today;
        }

        // 創建佣金圖表
        function createCommissionChart() {
            const ctx = document.getElementById('commissionChart').getContext('2d');
            
            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['已結算', '待結算', '處理中'],
                    datasets: [{
                        data: [45800, 8200, 2500],
                        backgroundColor: [
                            '#27ae60',
                            '#f39c12',
                            '#3498db'
                        ],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                usePointStyle: true
                            }
                        }
                    }
                }
            });
        }

        // 載入合作夥伴統計數據
        function loadPartnerStatistics() {
            setTimeout(() => {
                document.getElementById('totalReferrals').textContent = '28';
                document.getElementById('monthlyReferrals').textContent = '6';
                document.getElementById('conversionRate').textContent = '75%';
                document.getElementById('totalCommission').textContent = '$45,800';
            }, 1000);
        }

        // 快速預約表單提交
        document.getElementById('quickAppointmentForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = {
                customerName: document.getElementById('customerName').value,
                customerPhone: document.getElementById('customerPhone').value,
                appointmentDate: document.getElementById('appointmentDate').value,
                appointmentTime: document.getElementById('appointmentTime').value,
                treatmentType: document.getElementById('treatmentType').value,
                notes: document.getElementById('appointmentNotes').value
            };
            
            // 模擬提交
            MedicalPlatform.showAlert('正在提交預約...', 'info');
            
            setTimeout(() => {
                MedicalPlatform.showAlert('預約提交成功！診所將在24小時內聯絡客戶確認。', 'success');
                clearForm();
            }, 2000);
        });

        // 清除表單
        function clearForm() {
            document.getElementById('quickAppointmentForm').reset();
        }

        // 查看推薦詳情
        function viewReferralDetail(referralId) {
            MedicalPlatform.showAlert(`查看推薦 ${referralId} 詳情功能開發中`, 'info');
        }

        // 載入更多推薦
        function loadMoreReferrals() {
            MedicalPlatform.showAlert('載入更多推薦記錄功能開發中', 'info');
        }

        // 新增推薦
        function newReferral() {
            // 滾動到快速預約表單
            document.getElementById('quickAppointmentForm').scrollIntoView({ behavior: 'smooth' });
        }

        // 查看業績
        function viewPerformance() {
            MedicalPlatform.showAlert('業績報表功能開發中', 'info');
        }

        // 下載宣傳素材
        function downloadMaterials() {
            MedicalPlatform.showAlert('宣傳素材下載功能開發中', 'info');
        }

        // 聯絡客服
        function contactSupport() {
            MedicalPlatform.showAlert('客服聯絡功能開發中', 'info');
        }

        // 複製推薦連結
        function copyReferralLink() {
            const linkInput = document.querySelector('input[value*="ref/P001"]');
            linkInput.select();
            document.execCommand('copy');
            MedicalPlatform.showAlert('推薦連結已複製到剪貼簿', 'success');
        }

        // 申請提領
        function requestPayout() {
            MedicalPlatform.showAlert('佣金提領申請功能開發中', 'info');
        }

        // 查看佣金歷史
        function viewCommissionHistory() {
            MedicalPlatform.showAlert('佣金歷史記錄功能開發中', 'info');
        }

        // 狀態篩選
        document.getElementById('statusFilter').addEventListener('change', function() {
            const selectedStatus = this.value;
            MedicalPlatform.showAlert(`篩選狀態: ${selectedStatus || '全部'}`, 'info');
        });

        // 登出功能
        function logout() {
            MedicalPlatform.logout();
        }
    </script>
</body>
</html>
